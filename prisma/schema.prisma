generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mountain {
  id        Int      @id @default(autoincrement())
  
  name      String
  elevation Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  islands Island[]
  provinces Province[]
}

model Island {
  id   Int    @id @default(autoincrement())
  
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mountains Mountain[]
}

model Province {
  id   Int    @id @default(autoincrement())
  
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mountains Mountain[]
}

